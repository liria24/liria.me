---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import LogoAvatio from '../../public/logo_avatio.svg';
import ImageAvatio from '../../public/avatio.png';
---

<div
    class="w-full flex flex-col gap-6 **:transition-all **:ease-in-out **:duration-200 **:dalay-0"
>
    <div class="w-fit flex flex-wrap items-center gap-x-8 gap-y-2">
        <a
            href="https://avatio.me"
            target="_blank"
            class="w-fit flex mb-1 hover:opacity-60"
        >
            <Image
                src={LogoAvatio}
                alt="Avatio Logo"
                loading="eager"
                class="w-44 sm:w-56 object-cover shrink-0"
            />
        </a>

        <div class="w-fit flex items-center gap-8 pt-2">
            <a
                href="https://avatio.me"
                target="_blank"
                class="group flex gap-2 items-center"
            >
                <span class="text-neutral-500 group-hover:text-neutral-400">
                    avatio.me
                </span>
                <Icon
                    name="lucide:arrow-up-right"
                    size={16}
                    class="text-neutral-400 opacity-0 group-hover:opacity-100 translate-x-[-0.5rem] group-hover:translate-x-0"
                />
            </a>
        </div>
    </div>

    <div class="flex flex-wrap justify-center">
        <p class="grow p-10 text-lg font-bold text-neutral-400">
            Share your VRSNS avatars.
        </p>
        <Image
            src={ImageAvatio}
            alt="Avatio Image"
            loading="eager"
            class="max-w-lg rounded-xl object-cover shrink-0"
        />
    </div>
</div>
