---
import { twMerge } from 'tailwind-merge';
import { Icon } from 'astro-icon/components';

interface Props {
    type: 'info' | 'warning' | 'caution';
}
const { type } = Astro.props;

const color: { [key: string]: string } = {
    info: 'bg-sky-400/30',
    caution: 'bg-yellow-300/40',
    warning: 'bg-red-500/40',
};
---

<div
    class={twMerge(
        'w-full px-6 py-4 gap-3 rounded-xl flex flex-col not-prose',
        color[type]
    )}
>
    <div class="flex items-center gap-2">
        <Icon name="lucide:info" size={16} class="text-neutral-100" />
        <p class="leading-none text-sm font-bold">
            {
                () => {
                    if (type === 'info') return 'INFO';
                    if (type === 'warning') return 'WARNING';
                    if (type === 'caution') return 'CAUTION';
                }
            }
        </p>
    </div>
    <p class="pl-2">
        <slot />
    </p>
</div>
